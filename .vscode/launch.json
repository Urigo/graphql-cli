  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run AVA test serially",
      "program": "${workspaceFolder}/node_modules/ava/profile.js",
      "args": [
        "${workspaceFolder}/dist/${input:toProfile}.test.js",
        "--serial"
      ],
      "skipFiles": ["<node_internals>/**/*.js"]
    }
  ],
  "inputs": [
    {
      "id": "toProfile",
      "type": "promptString",
      "description": "Test file to profile"
    }
  ]
}
