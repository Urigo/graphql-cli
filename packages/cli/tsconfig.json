{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es6", "esnext", "es2015", "dom"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
