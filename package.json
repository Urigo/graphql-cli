{
  "name": "graphql-cli-monorepo",
  "version": "4.0.0",
  "private": true,
  "author": "dotansimha <dotansimha@gmail.com>",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/commands/*",
      "integration"
    ]
  },
  "scripts": {
    "release": "node scripts/release.js",
    "release:next": "node scripts/release.js --tag=next",
    "release:canary": "node scripts/release.js --canary",
    "test": "lerna run test",
    "build": "lerna run build",
    "postbuild": "yarn fix-bin",
    "fix-bin": "node scripts/fix-bin.js",
    "format": "prettier --write \"**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "@graphql-tools/load": "6.0.12",
    "@types/express": "4.17.6",
    "@types/fs-extra": "9.0.1",
    "@types/fullname": "2.1.29",
    "@types/inquirer": "6.5.0",
    "@types/js-yaml": "3.12.5",
    "@types/node": "14.0.14",
    "@types/rimraf": "3.0.0",
    "@types/tmp": "0.2.0",
    "graphql": "15.3.0",
    "husky": "4.2.5",
    "lerna": "3.22.1",
    "lint-staged": "10.2.9",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-node": "8.10.1",
    "typescript": "3.9.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "resolutions": {
    "graphql": "15.3.0"
  }
}